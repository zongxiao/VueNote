@import './mixins.styl';
.detail_box
  display: flex
  margin-top: 20px
  align-items: flex-start
  .left_box
    flex: 1
    padding: 32px
    background-color: rgba(255, 255, 255, 0.7)
    margin-right: 20px
    box-sizing: border-box
    .article_top
      font-size: 14px
      text-align: left
      color: #666
      .tit
        font-size: 30px
        line-height: 1.4
        color: $color
      .others
        margin-top: 10px
        display: flex
        justify-content: flex-start
        span
          color: #999
          font-size: 14px
          margin-right: 30px
    .article_content
      margin-top: 30px
      font-size: 16px
      color: #444
      p
        margin-top: 20px
        line-height: 1.8
  .right_box
    width: 300px