@import './mixins.styl';
.detail_box
  display: flex
  margin-top: 16px
  .content_box
    flex: 1
    background-color: rgba(255, 255, 255, 0.7)
    margin-right: 20px
  .otherinfo
    width: 200px
    height: 500px
    background-color: rgba(255, 255, 255, 0.7)








.blog_title
  height: 350px
  padding: 30px
  box-sizing: border-box
  display: flex
  justify-content: center
  flex-direction: column
  align-items: center
  background-color: rgba(255, 255, 255, 0.8)
  margin-top: 16px
  h4
    font-size: 24px
    line-height: 1.8
    text-align: center
    color: $color
  .time
    color: #666
    font-size: 16px
    margin-top: 20px