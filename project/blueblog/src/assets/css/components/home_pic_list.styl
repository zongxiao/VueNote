@import '../mixins.styl'
.index_projects
  margin-top 40px
.projects_banner
  overflow hidden
  margin-bottom 30px
  .main
    width 700px
    height 0
    padding-bottom 30%
    position relative
    float left
    overflow hidden
    border-radius $border-radius
    img
      position absolute
      width 100%
      top 50%
      translate-y(-50%)
  .sub
    width 480px
    height 0
    padding-bottom 30%
    position relative
    float right
    overflow hidden
    border-radius $border-radius
    img
      position absolute
      width 100%
.projects_title
  display flex
  justify-content space-between
  align-items: center
.title
  font-size 28px
  color $color
  font-weight bold
.search_box
  display flex
  input
    outline none
    flex 1
    border(1px)
    padding-left: 8px
.projects_body
  &:after
    content: ''
    display: block
    clear: left
  .card_box
    float left
    width 23.5%
    box-sizing: border-box
    padding: 16px
    background-color rgba(255, 255, 255, 0.8)
    margin-top 2%
    margin-right 2%
    position relative
    top 0
    transition(0.2s)
    &:hover
      box-shadow(0, 15px, 30px, 0.1)
      top -5px
      .card_cover > img
        scale-all(1.1)
      .card_info .name > a
        color: $primary-color
    &:nth-child(4n)
      margin-right 0
    .card_cover
      display block
      padding-bottom 75%
      position relative
      overflow hidden
      img
        width 100%
        position absolute
        transition(0.2s)
      i
        display: inline-block
        padding: 3px 4px
        background-color: rgba(0, 0, 0, 0.65)
        color: #fff
        position: absolute
        left: 0px
        top: 0px
    .card_info
      padding 12px 0px 0px 0
      .name
        display: flex
        justify-content: space-between
        align-items: center
        a
          font-size 16px
          font-weight bold
          line-height: 1.5
          color #333
          ellipsis(1)
          flex: 1
        .pubtime
          text-align right
          font-size 12px
          color #999
          margin-left: 10px
      .subname
        font-size 14px
        color #888
        margin-top 8px
        line-height: 20px
        height: 40px
        text-align: justify
        ellipsis(2)