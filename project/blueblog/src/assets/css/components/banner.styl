@import '../mixins.styl'
.banner
  font-size: 0
  margin-top: 20px
  .swiper-wrapper
    .swiper-slide
      img
        width: 100%
  .swiper-pagination
    display: inline-block
    width: auto
    padding: 4px 3.5px
    border-radius: 13.5px
    background-color: #fff
    left: 50%
    bottom: 22px
    translate-x(-50%)
    .swiper-pagination-bullet
      width: 8px
      height: 8px
      margin: 0 3.5px
    .swiper-pagination-bullet-active
      background-color: $primary-color