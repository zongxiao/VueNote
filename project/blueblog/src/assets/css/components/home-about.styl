@import '../mixins.styl'
.index_about
  display: flex
  margin-top: 40px
  .img_title
    padding: 0 24px
    background-color: $primary-color
    .text
      font-size: 22px
      font-weight: bold
      color: #fff
      text-align: center
    .img_box
      width: 80px
      height: 80px
      overflow: hidden
      border-radius: 50%
      margin: 32px auto 14px auto
      img
        width: 100%
  .intro_content
    flex: 1
    background-color: #fff
    .intro
      padding: 20px 40px
      font-size: 15px
      line-height: 1.8
      text-indent: 2em
      color: $primary-color
    .info
      background-color: #fff
      padding: 24px 40px
      display: flex
      justify-content: space-between
      align-content: center
      font-size: 12px
      color: #999999
      border-top: 1px dashed #ccc
      span
        color: #333333
        margin-left: 10px
        font-size: 16px